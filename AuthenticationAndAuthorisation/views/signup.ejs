<!-- signup.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Sign Up</title>
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <!-- Custom dark mode styles -->
  <style>
    body {
      background-color: #1a202c; /* Dark background color */
      color: #cbd5e0; /* Light text color */
    }
    .form-container {
      background-color: #2d3748; /* Darker background color for form */
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .form-input {
      background-color: #2d3748;
      border-color: #4a5568;
      color: #cbd5e0;
    }
    .form-input:focus {
      border-color: #38b2ac;
    }
    .form-label {
      color: #a0aec0;
    }
    .form-button {
      background-color: #38b2ac;
      color: #fff;
    }
    .form-button:hover {
      background-color: #319795;
    }
  </style>
</head>
<body>
  <div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="max-w-md w-full p-8 rounded-md form-container">
      <h2 class="text-2xl font-bold mb-6 text-white">Sign Up</h2>
      <form action="/user/signup" method="POST" class="space-y-4">
        <div>
          <label for="firstname" class="block mb-1 form-label">First Name</label>
          <input type="text" id="firstname" name="firstname" placeholder="Enter your first name" class="w-full px-3 py-2 border rounded-md outline-none form-input" required>
        </div>
        <div>
          <label for="lastname" class="block mb-1 form-label">Last Name</label>
          <input type="text" id="lastname" name="lastname" placeholder="Enter your last name" class="w-full px-3 py-2 border rounded-md outline-none form-input" required>
        </div>
        <div>
          <label for="username" class="block mb-1 form-label">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter your username" class="w-full px-3 py-2 border rounded-md outline-none form-input" required>
        </div>
        <div>
          <label for="email" class="block mb-1 form-label">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" class="w-full px-3 py-2 border rounded-md outline-none form-input" required>
        </div>
        <div>
          <label for="password" class="block mb-1 form-label">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" class="w-full px-3 py-2 border rounded-md outline-none form-input" required>
        </div>
        <div>
          <button type="submit" class="w-full py-2 px-4 rounded-md form-button">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
